<h2>Update the drone</h2>

<form method='POST' action='/drones/{{drone._id}}/edit'>

  <div>
    <label for='name'>Name</label>
    <input type='text' id='name' name='name' value='{{drone.name}}' />
  </div>
  <div>
    <label for='propellers'>Propellers</label>
    <input
      type='number'
      id='propellers'
      name='propellers'
      value='{{drone.propellers}}'
    />
  </div>
  <div>
    <label for='maxSpeed'>Speed</label>
    <input
      type='number'
      id='maxSpeed'
      name='maxSpeed'
      value='{{drone.maxSpeed}}'
    />
  </div>
  <button>Submit</button>
</form>